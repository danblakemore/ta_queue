<% content_for :extra_stylesheets do stylesheet_link_tag "login" end %>
<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <h2>Create Instructor Account</h2>

  <%= render "instructors/registrations/form", f: f %>

  <%= f.input :school, as: :select, include_blank: false %>

  <%= f.input :master_password, label: false, placeholder: "Master Password", hint: "This should have been given to you by the person in charge of the school/institution you represent." %>

  <div><%= f.submit "Sign up" %><%= link_to "Sign In Instead", new_instructor_session_path, style: "margin-left:9px;" %></div>
<% end %>
