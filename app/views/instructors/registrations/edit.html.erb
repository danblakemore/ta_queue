<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <h1> Edit Account Information </h1>
  <%= devise_error_messages! %>

  <%= f.input :email, label: false, placeholder: "Email" %>

  <%= f.input :password, label: false, placeholder: "New Password" %>

  <%= f.input :password_confirmation, label: false, placeholder: "New Password Confirmation" %>

  <%= f.input :current_password, label: false, placeholder: "Current Password" %>

  <%= f.submit "Update" %>
  <%= link_to "Back", instructors_dashboard_path %>
<% end %>

